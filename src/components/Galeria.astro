<style>
  .galeria {
    padding: 20px;
    text-align: center;
  }

  .galeria-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
  }

  .galeria-grid img {
    width: 100%;
    height: auto;
    border-radius: 5px;
    transition: transform 0.3s;
  }

  .galeria-grid img:hover {
    transform: scale(1.05);
  }
</style>